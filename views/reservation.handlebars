{{>navbar }}
<section id="book-a-table" class="book-a-table">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-md-8 offset-md-2 text-center">
        <h2 class="text-primary">Book A Table</h2>
        <p class="mb-5"></p>
      </div>
    </div>
    <form action="" method="post" role="form">
      <div class="form-row">
        <div class="col-lg-4 col-md-6 form-group">
          <input
            type="text"
            name="name"
            class="form-control"
            id="name"
            placeholder="Your Name"
          />
        </div>
        <div class="col-lg-4 col-md-6 form-group">
          <input
            id="emailInput"
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="Your Email"
          />
        </div>
        <div class="col-lg-4 col-md-6 form-group">
          <input
            id="phoneNumber"
            type="number"
            class="form-control"
            name="phone"
            id="phone"
            placeholder="Your Phone"
          />
        </div>
        <div class="col-lg-4 col-md-6 form-group">
          <input
            id="resDate"
            type="date"
            name="date"
            class="form-control"
            id="date"
            placeholder="Date"
          />
        </div>
        <div class="col-lg-4 col-md-6 form-group">
          <input
            id="resTime"
            type="time"
            class="form-control"
            name="time"
            id="time"
            placeholder="Time"
          />
        </div>
        <div class="col-lg-4 col-md-6 form-group">
          <input
            id="numPeople"
            type="number"
            class="form-control"
            name="people"
            id="people"
            placeholder="No. of people"
          />
        </div>
      </div>
      <div class="form-group">
        <textarea
          id="resMessage"
          class="form-control"
          name="message"
          placeholder="Message"
        ></textarea>
      </div>
  
      <button
        type="submit"
        class="btn btn-primary float-right mt-3"
        id="sbtBtn"
      >
        Book a Table
      </button>
    </form>
  </div>
</section>

<script src="./js/reservation.js"></script>